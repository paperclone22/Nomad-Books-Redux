{
  "schemaVersion": 1,
  "id": "nomadbooks",
  "version": "${version}",

  "name": "Nomad Books",
  "description": "Nomad encampments deployed from books",
  "authors": [
    "ZestyBlaze",
    "doctor4t"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/nomad-books",
    "sources": "https://github.com/Ladysnake/Nomad-Books",
    "issues": "https://github.com/Ladysnake/Nomad-Books/issues"
  },

  "license": "GPLv3",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.zestyblaze.nomadbooks.NomadBooks"
    ],
    "client": [
      "net.zestyblaze.nomadbooks.client.NomadBooksClient"
    ],
    "fabric-datagen": [
      "net.zestyblaze.nomadbooks.NomadBooksDataGenerator"
    ]
  },
  "mixins": [
    "nomadbooks.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "~${minecraft_version}",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
